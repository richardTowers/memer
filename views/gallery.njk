{% extends "layout.njk" %}
{% from "button/macro.njk" import govukButton %}


{% block content %}
<div class="govuk-width-container">
  <main class="govuk-main-wrapper">

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        {% if currentObject %}
          <h1 class="govuk-heading-l">{{ currentObject.split(':')[1] }}</h1>
          <img class="meme-template" src="/images/{{ currentObject}}">
        {% elif objects[0] %}
          <h1 class="govuk-heading-l">{{ objects[0].split(':')[1] }}</h1>
          <img class="meme-template" src="/images/{{ objects[0] }}">
        {% else %}
          <p class="govuk-body">Nobody has posted anything yet...</p>
        {% endif %}
      </div>

      <div class="govuk-grid-column-one-third">
        {{ govukButton({ text: "Create a meme", href: "/select-your-image" }) }}
        <h2 class="govuk-heading-m">Memes</h2>
        <ul>
          {% for object in objects %}
            <li><a href="/gallery/{{ object }}">{{object}}</a></li>
          {% endfor %}
        </ul>
      </div>
    </div>

  </main>
</div>
{% endblock %}
